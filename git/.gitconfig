[core]
	excludesfile = ~/.gitignore_global
	editor = vim
	autocrlf = input

[alias]
    cm = commit
    cmm = commit -m
    ck = checkout
    rs = reset
    rb = rebase
    rv = revert
    mg = merge
    ada = add -A
    lg1 = log --graph --abbrev-commit --decorate --date=format:'%y/%m/%d %H:%M' --format=format:'%C(bold blue)%h%C(reset) %C(dim blue)%ad%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
    last = "!f() { for i in $(seq 1 $1); do git name-rev --name-only --exclude=refs/tags/\\* @{-$i}; done; }; f"

[gager]
	diff = diff-highlight | less

[color]
    ui = auto

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
